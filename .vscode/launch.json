  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run current file",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/${relativeFile}"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Start local development",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/index.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Run datastore playground",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceRoot}/cmd/playground.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}