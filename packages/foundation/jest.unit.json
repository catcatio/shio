{
  "displayName": "unit tests",
  "testURL": "http://localhost/",
  "verbose": true,
  "globals": {
    "ts-jest": {
      "skipBabel": true
    }
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "reporters": ["default"],
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/**/__test__/**/*.(spec|test).ts"],
  "testPathIgnorePatterns": ["/node_modules/"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "node", "json"]
}
