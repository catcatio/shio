{
  "compilerOptions": {
    "strictFunctionTypes": true,
    "types": [
      "jest",
      "node"
    ],
    "experimentalDecorators": true,
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
  ]
}